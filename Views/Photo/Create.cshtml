@model PhotoSharingAppJessieDomingo.Models.PhotoModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="title">
</h2>

<div class="create-container">
    <div class="create-details-card">
        <h2 class="create-title">Upload a Photo</h2>
        <div class="row justify-content-center">
            <div class="col-5">
                <form method="post" enctype="multipart/form-data" asp-action="Create">


                    <div class="form-group row">
                        <label asp-for="Title" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Title" type="text" class="form-control" placeholder="Title" required>
                            <span asp-validation-for="Title"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Description" type="text" class="form-control" placeholder="Description" required>
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Owner" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Owner" type="text" class="form-control" placeholder="Owner" value="@ViewBag.name" required>
                            <span asp-validation-for="Owner"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label asp-for="PhotoAvatar" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="PhotoAvatar" type="file" required>
                            <span asp-validation-for="PhotoAvatar"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary">
                                Upload
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class ="backtolist">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
