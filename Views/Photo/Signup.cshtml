@model PhotoSharingAppJessieDomingo.Models.IUserModel

@{
    ViewData["Title"] = "Signup";
}

<h1>Signup</h1>

<div class="signup-container">
    <div class="signup-details-card">
        <h2 class="signup-title">New User Registration</h2>
        <div class="row justify-content-center">
            <div class="col-5">
                <form method="post" enctype="multipart/form-data" asp-action="Enroll">
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName" required>
                            <span asp-validation-for="FirstName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MiddleName" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="MiddleName" type="text" class="form-control" placeholder="MiddleName" required>
                            <span asp-validation-for="MiddleName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="LastName" required>
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserID" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="UserID" type="text" class="form-control" placeholder="UserID" required>
                            <span asp-validation-for="UserID"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-6 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary">
                                Register
                            </button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="backtolist">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
