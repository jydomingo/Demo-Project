@model IEnumerable<PhotoSharingAppJessieDomingo.Models.PhotoModel>

@{
    ViewData["Title"] = "Slide";

}


<div class="slider-container">
    <div class="slider">

        @foreach (var item in Model)
        {
            <div class="slide active">
                <img class="photo-slide-img" src="@Url.Action("GetImage", "photo", new { Id = item.PhotoID })" alt="img" />
                <div class="info">
                    <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                    <p>@Html.DisplayFor(model => item.Description)</p>
                </div>
            </div>
        }
        <div class="navigation">
            <i class="fas fa-chevron-left prev-btn"></i>
            <i class="fas fa-chevron-right next-btn"></i>
        </div>
    </div>
    
    
    <div class="navigation-visibility">
        <div class="slide-icon active"></div>
        <div class="slide-icon"></div>
        <div class="slide-icon"></div>
        <div class="slide-icon"></div>
        <div class="slide-icon"></div>
    </div>
    
</div>



@section Scripts{

    <link rel="stylesheet" type="text/css" href="~/css/slider-style.css">
    <script src="~/js/slider-functions.js"></script>
}