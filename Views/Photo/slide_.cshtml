@model IEnumerable<PhotoSharingAppJessieDomingo.Models.PhotoModel>

@{
    ViewData["Title"] = "Slide";

}


<div class="slider-container">
    <div class="slides slowFade">
        
        @foreach (var item in Model)
        {
            <div class="slide">
                <img class="photo-slide-img" src="@Url.Action("GetImage", "photo", new { Id = item.PhotoID })" alt="img" />
            </div>
        }
    </div>
</div>


<!-- Slider Next and Previous buttons -->
<a class="prev" onclick="plusIndex(-1)">❮</a>
<a class="next" onclick="plusIndex(+1)">❯</a>

<div class="slider-bullets" id="slider-bullets">
    <span class="dots" onclick="currentSlide(1)"></span>
    <span class="dots" onclick="currentSlide(2)"></span>
    <span class="dots" onclick="currentSlide(3)"></span>
    <span class="dots" onclick="currentSlide(4)"></span>
</div> <!-- Slider Bullets -->

<a href="#" class="play" >Pause</a>




@section Scripts{
    
    <link rel="stylesheet" type="text/css" href="~/css/slide-style.css">
    <script src="~/js/slider-functions.js"></script>
}